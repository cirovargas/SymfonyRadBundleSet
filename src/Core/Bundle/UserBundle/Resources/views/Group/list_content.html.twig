<div class="page-header">
    <h1>{{ 'views.index.list'|trans({'%entity%': 'app.group.entity'|trans({},'EntityTranslations')|capitalize}, 'CoreAdminBundle') }}</h1>
</div>

<div class="row">
    <div class="col-sm-12">
        <div class="panel">
            <div class="panel-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th class="col-md-10">Nome</th>
                            <th class="col-md-2">{{ 'views.index.actions'|trans({}, 'CoreAdminBundle') }}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for group in groups %}
                        <tr>
                            <td><a href="{{ path('fos_user_group_show', {'groupName': group.id} ) }}">{{ group.getName() }}</a></td>
                            <td>
                               <div class="btn-group">
                                        <button class="btn dropdown-toggle" type="button" data-toggle="dropdown">
                                            {{ 'views.index.actions'|trans({}, 'CoreAdminBundle') }} &nbsp;<i class="fa fa-caret-down"></i>
                                        </button>
                                        <ul class="dropdown-menu">
                                            {% if is_granted('ROLE_ADMIN_USERGROUPS_EDIT') %}
                                            <li><a href="{{ path('fos_user_group_edit', {'groupName': group.id}) }}">{{ 'views.actions.edit'|trans({},'CoreAdminBundle')|capitalize }}</a></li>
                                            {% endif %}
                                            {% if is_granted('ROLE_ADMIN_USERGROUPS_DELETE') %}
                                            <li><a href="{{ path('fos_user_group_delete', {'groupName': group.id}) }}" onclick="return confirm('{{ 'views.recordactions.confirm'|trans({}, 'CoreAdminBundle') }}')">{{ 'views.recordactions.delete'|trans({},'CoreAdminBundle') }}</a></li>
                                            {% endif %}
                                            {% if is_granted('ROLE_ADMIN_USERGROUPS_PERMISSIONS') %}
                                            <li><a href="{{ path('admin_user_group_permissions', {'groupName': group.id}) }}">Permiss√µes</a></li>
                                            {% endif %}
                                        </ul>
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-8">

    </div>
    <div class="col-md-4 text-right">
        {% if is_granted('ROLE_ADMIN_USERGROUPS_ADD') %}
        <a class="btn btn-primary likepaginator" href="{{ path('fos_user_group_new') }}">
            {{ 'views.index.createnew'|trans({},'CoreAdminBundle') }}
        </a>
        {% endif %}
    </div>
</div>