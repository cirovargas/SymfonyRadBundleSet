<div class="page-header">
    <h1>Grupos</h1>
</div>

<div class="row">
    <div class="col-sm-12">
        <div class="panel">
            <div class="panel-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th class="col-md-10">Nome</th>
                            <th class="col-md-2">{{ 'views.index.actions'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for group in groups %}
                        <tr>
                            <td><a href="{{ path('fos_user_group_show', {'groupName': group.getName()} ) }}">{{ group.getName() }}</a></td>
                            <td>
                               <div class="btn-group">
                                        <button class="btn dropdown-toggle" type="button" data-toggle="dropdown">
                                            {{ 'views.index.actions'|trans({}, 'JordiLlonchCrudGeneratorBundle') }} &nbsp;<i class="fa fa-caret-down"></i>
                                        </button>
                                        <ul class="dropdown-menu">
                                            <li><a href="{{ path('fos_user_group_edit', {'groupName': group.getName()}) }}">Editar</a></li>
                                            <li><a href="{{ path('fos_user_group_delete', {'groupName': group.getName()}) }}" onclick="return confirm('{{ 'views.recordactions.confirm'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}')">Excluir</a></li>
                                            <li><a href="{{ path('admin_user_group_permissions', {'groupName': group.getName()}) }}">Permiss√µes</a></li>
                                        </ul>
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <br />
    <br />
</div>
<div class="row">
    <div class="col-md-8">

    </div>
    <div class="col-md-4 text-right">
        {% if is_granted('ROLE_ADMIN_USERGROUPS_SINCRONIZE') or is_granted('ROLE_SUPER_ADMIN') %}
        <a class="btn btn-primary likepaginator" href="{{ path('admin_groups_sincronizar') }}">
            Sincronizar LDAP
        </a>
        {% endif %}
        <a class="btn btn-primary likepaginator" href="{{ path('fos_user_group_new') }}">
            Adicionar grupo
        </a>
    </div>
</div>